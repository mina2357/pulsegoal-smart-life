
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="@color/card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/hello_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome back!"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textColor="@color/primary_dark"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/goal_brief"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="You have 3 active goals"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="@color/text_primary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Today's Goals Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="@color/card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's Goals"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/primary_dark"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Goal Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@color/goal_progress"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Exercise for 30 minutes"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75%"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/goal_progress"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Goal Item 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@color/accent"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Read 20 pages"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40%"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/accent"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Goal Item 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@color/primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Meditate for 10 minutes"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90%"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/primary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Chart Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="@color/card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weekly Progress"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/primary_dark"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Progress Chart Placeholder -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:layout_marginBottom="8dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@color/goal_progress" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@color/accent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@color/primary" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="95dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@color/goal_progress" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@color/accent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@color/primary" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@color/goal_progress" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mon"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/text_primary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tue"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/text_primary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wed"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/text_primary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thu"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/text_primary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fri"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/text_primary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sat"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/text_primary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sun"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/text_primary"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- AI Tip of the Day Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="@color/card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AI Tip of the Day"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/primary_dark"
                        android:fontFamily="sans-serif-medium" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@color/accent" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ml_suggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Based on your progress, try breaking your larger goals into smaller, daily habits for better consistency!"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="@color/text_primary"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
